<mixin>
    <display-name>Relaterte statistikker</display-name>
    <form>
        <field-set>
            <label>Relaterte statistikker (IKKE BRUK)</label>
            <items>
                <option-set name="relatedStatisticsOptions">
                    <expanded>false</expanded>
                    <occurrences minimum="0" maximum="0" />
                    <options minimum="1" maximum="1">
                        <option name="xp">
                            <label>Statistikk fra XP (IKKE BRUK)</label>
                            <items>
                                <input name="contentId" type="ContentSelector">
                                    <label>Statistikk</label>
                                    <occurrences minimum="0" maximum="1" />
                                    <config>
                                        <allowContentType>statistics</allowContentType>
                                    </config>
                                </input>
                            </items>
                        </option>
                        <option name="cms">
                            <label>Statistikk fra 4.7 (IKKE BRUK)</label>
                            <items>
                                <input name="title" type="TextLine">
                                    <label>Tittel</label>
                                    <occurrences minimum="1" maximum="1" />
                                </input>
                                <input name="profiledText" type="TextArea">
                                    <label>Profileringstekst</label>
                                    <occurrences minimum="1" maximum="1" />
                                </input>
                                <input name="url" type="TextLine">
                                    <label>URL</label>
                                    <occurrences minimum="1" maximum="1" />
                                </input>
                            </items>
                        </option>
                    </options>
                </option-set>
            </items>
        </field-set>
        <field-set>
            <label>Statistikker</label>
            <!-- TODO: After the option-set is deleted, consider placing only the item inputs in the mixin so that every usage 
                        can have field-sets with different labels -->
            <items>
                <input name="title" type="TextLine">
                    <label>Tittel</label>
                    <occurrences minimum="0" maximum="1" />
                </input>
                <item-set name="statisticsItemSet">
                    <label>Innhold fra XP eller lenke</label>
                    <occurrences minimum="0" maximum="0" />
                    <items>
                        <input name="icon" type="ImageSelector">
                            <label>Ikon</label>
                            <occurrences minimum="0" maximum="1" />
                        </input>
                        <input name="contentXP" type="ContentSelector">
                            <label>Innhold fra XP</label>
                            <occurrences minimum="0" maximum="1" />
                            <config>
                                <allowContentType>article</allowContentType>
                                <allowContentType>statistics</allowContentType>
                                <allowContentType>page</allowContentType>
                            </config>
                        </input>
                        <input name="title" type="TextLine">
                            <label>Tittel for lenke</label>
                            <occurrences minimum="0" maximum="1" />
                        </input>
                        <input name="profiledText" type="TextArea">
                            <label>Profileringstekst for lenke</label>
                            <occurrences minimum="0" maximum="1" />
                        </input>
                        <input name="href" type="TextLine">
                            <label>Lenke</label>
                            <occurrences minimum="0" maximum="1" />
                        </input>
                    </items>
                </item-set>
            </items>
        </field-set>
    </form>
</mixin>
