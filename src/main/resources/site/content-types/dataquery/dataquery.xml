<content-type>
  <display-name>Spørring datakilde</display-name>
  <super-type>base:structured</super-type>
  <allow-child-content>true</allow-child-content>
  <form>
    <input name="table" type="TextLine">
      <label>URL til tabell</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="regiontype" type="RadioButton">
      <label>Regionstype (ikke i bruk - evaluere behov)</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="dynamisk-kommune">Dynamisk kommune</option>
        <option value="dynamisk-fylke">Dynamisk fylke</option>
      </config>
      <default>one</default>
    </input>
    <input name="json" type="TextArea">
      <label>Spørring i JSON-format</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <mixin name="datasetFormat"/>
    <input name="update" type="RadioButton">
      <label>Oppdateres</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="daily">Daglig</option>
        <option value="changed">Ved endringer</option>
      </config>
      <default>daily</default>
    </input>
  </form>
</content-type>
