<content-type>
    <display-name>Infografikk / Visualisering</display-name>
    <description>Infografikk eller visualisering med tittel og beskrivelse</description>
    <super-type>base:structured</super-type>
    <form>
        <input name="title" type="TextLine">
        <label>Tittel p√• visualinseringen</label>
        <occurrences minimum="1" maximum="1" />
        </input>

        <input name="image" type="ImageSelector">
        <label>Infografikk eller visualisering</label>
        <occurrences minimum="1" maximum="1"/>
        <config>
            <allowPath>${site}</allowPath>
        </config>
        </input>

        <mixin name="sources" />

        <mixin name="footnote" />

        <input name="longDesc" type="TextArea">
            <label>Beskrivende hjelpetekst for blinde</label>
            <default></default>
        </input>

        <input name="tableData" type="HtmlArea">
            <label>Tabelldata</label>
            <occurrences minimum="0" maximum="1" />
        </input>
    </form>
</content-type>