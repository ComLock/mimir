<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name i18n="notification.title">Varselmelding</display-name>
    <description i18n="notification.description">Varsle til en eller flere kommuner om deres innhold i kommunefakta</description>
    <super-type>base:structured</super-type>
    <form>
        <input name="messageType" type="ComboBox">
            <label i18n="notification.type">Varseltype</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <option value="info">Info varsel</option>
                <option value="warning">Error varsel</option>
            </config>
            <default>info</default>
        </input>
        <input type="HtmlArea" name="message">
            <label i18n="notification.message">Meldingen</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="CustomSelector" name="municipalCodes">
            <label i18n="notification.affectedMunicipals">Hvilken kommuner gjelder meldingen</label>
            <occurrences minimum="1" maximum="0"/>
            <config>
                <service>customSelectorMunicipals</service>
            </config>
        </input>
    </form>
</content-type>
