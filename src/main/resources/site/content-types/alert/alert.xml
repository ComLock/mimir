<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Varselmelding</display-name>
    <description>En varsel for hele siten eller for kommuner</description>
    <super-type>base:structured</super-type>
    <form>
        <input type="HtmlArea" name="message">
            <label>Tekst</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="messageType" type="ComboBox">
            <label>Type</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <option value="info">Info varsel</option>
                <option value="warning">Error varsel</option>
            </config>
            <default>info</default>
        </input>
        <input type="CustomSelector" name="municipalCodes">
            <label>Hvis varselen gjelder kommuner, velg hvilken kommuner her.</label>
            <help-text >Om kommuner er valgt her, vil varselen bare synes under valgte kommuner p√• /kommunefakta.</help-text>
            <occurrences minimum="0" maximum="0"/>
            <config>
                <service>customSelectorMunicipals</service>
            </config>
        </input>
    </form>
</content-type>
