<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Meny</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input type="TextLine" name="title">
      <label>Overskrift</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <item-set name="menu">
      <occurrences minimum="0" maximum="99"/>
      <label>Side</label>
      <items>
        <input type="TextLine" name="title">
          <label>Tittel</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="image" type="imageSelector">
          <occurrences minimum="0" maximum="1"/>
          <label>Bilde</label>
          <config>
            <allowPath>${site}</allowPath>
          </config>
        </input>
        <input name="content" type="ContentSelector">
          <label>Innhold</label>
          <occurrences minimum="0" maximum="0"/>
          <config>
            <allowPath>${site}</allowPath>
            <allowType>com.histstat.app:page</allowType>
          </config>
        </input>
      </items>
    </item-set>
  </form>
</content-type>
