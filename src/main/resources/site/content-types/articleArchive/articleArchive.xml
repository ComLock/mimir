<content-type>
    <display-name>Artikkel- og publikasjonsarkiv</display-name>
    <super-type>base:structured</super-type>
    <form>
        <input name="preamble" type="TextArea">
            <label>Ingress</label>
            <occurrences minimum="0" maximum="1" />
        </input>
        <input name="image" type="ImageSelector">
            <label>Bilde</label>
            <occurrences minimum="0" maximum="1" />
        </input>
        <input name="freeText" type="HtmlArea">
            <label>Fritekst</label>
            <config>
                <exclude>*</exclude>
                <include>Styles Bold Italic Underline Strike Cut Copy
                    JustifyBlock JustifyLeft JustifyCenter JustifyRight
                    BulletedList NumberedList Outdent Indent
                    SpecialChar Anchor Image Macro Link Unlink
                    Table TableBlockquote
                    Subscript Superscript</include>
            </config>
            <occurrences minimum="0" maximum="1" />
        </input>

        <input name="issnNumber" type="TextLine">
            <label>ISSN-nummer</label>
            <occurrences minimum="0" maximum="1" />
        </input>
    </form>
</content-type>
