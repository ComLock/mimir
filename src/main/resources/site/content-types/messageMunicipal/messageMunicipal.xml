<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name i18n="messageMunicipal.title">Kommunevarsel</display-name>
    <description i18n="messageMunicipal.description">Varsle til en eller flere kommuner om deres innhold i kommunefakta</description>
    <super-type>base:structured</super-type>
    <form>
        <input name="messageType" type="ComboBox">
            <label i18n="messageMuniciap.type">Varseltype</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <option value="info">Info alarms</option>
                <option value="warning">Error alarm</option>
            </config>
            <default>info</default>
        </input>
        <input type="HtmlArea" name="message">
            <label i18n="messageMuniciap.message">Melding</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="CustomSelector" name="municipalCodes">
            <label i18n="messageMuniciap.municipals">Hvilken kommuner gjelder meldingen</label>
            <occurrences minimum="0" maximum="0"/>
            <config>
                <service>customSelectorMunicipals</service>
            </config>
        </input>
    </form>
</content-type>
