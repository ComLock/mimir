<macro>
    <display-name>Header Link</display-name>
    <description></description>
    <form>
        <input name="linkedContent" type="ContentSelector">
            <label>Innhold</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowContentType>media:document</allowContentType>
                <treeMode>false</treeMode>
                <showStatus>true</showStatus>
            </config>
        </input>
        <input name="linkText" type="TextLine">
            <label>Lenketekst</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
    </form>
</macro>
