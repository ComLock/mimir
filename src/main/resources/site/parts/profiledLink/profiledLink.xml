<part>
    <display-name>Profilerte lenker</display-name>
    <form>
        <item-set name="profiledLinkItemSet">
            <label>Profilerte lenker</label>
            <occurrences minimum="0" maximum="0"/>
            <items>
                <input name="text" type="TextLine">
                    <label>Lenketekst</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="href" type="ContentSelector">
                    <label>Innhold</label>
                    <occurrences minimum="0" maximum="1"/>
                    <config>
                        <allowPath>${site}</allowPath>
                    </config>
                </input>
            </items>
        </item-set>
    </form>
</part>
