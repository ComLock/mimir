<part>
  <display-name>Kontakt</display-name>
  <description>Part med én kontakt</description>
  <form>
    <input name="label" type="TextLine">
      <label>Overskrift på kontaktområde</label>
      <default>Kontakter</default>
      <config>
        <max-length>30</max-length>
      </config>
    </input>
    <input name="contacts" type="ContentSelector">
      <label>Kontakt</label>
      <occurrences minimum="1" maximum="0"/>
      <config>
        <allowPath>${site}</allowPath>
        <allowType>contact</allowType>
      </config>
    </input>
  </form>
</part>