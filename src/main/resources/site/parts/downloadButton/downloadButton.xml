<part>
    <display-name>Nedlastningsknapper</display-name>
    <description>Nedlastningsknapper for data til forskning</description>
    <form>
        <item-set name="downloadButtonItemSet">
            <label>Knapper</label>
            <occurrences minimum="0" maximum="0" />
            <items>
                <input name="text" type="TextLine">
                    <label>Knapptekst</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="file" type="ContentSelector">
                    <label>Innhold</label>
                    <occurrences minimum="0" maximum="1"/>
                    <config>
                        <allowPath>${site}</allowPath>
                    </config>
                </input>
            </items>
        </item-set>
    </form>
</part>
